{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./web/types"]
  },
  "include": [
    "web/**/*.ts",
    "web/**/*.tsx",
    "web/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".gadget",
    "api/**/*",
    "accessControl/**/*",
    "settings.gadget.ts",
    "vite.config.mts",
    "dist/**/*",
    "web/dist/**/*",
    "**/*.js"
  ]
}
