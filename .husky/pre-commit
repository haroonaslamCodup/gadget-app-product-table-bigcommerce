#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "üîç Running TypeScript type check..."
npm run type-check

if [ $? -ne 0 ]; then
  echo ""
  echo "‚ùå TypeScript type check failed!"
  echo "Please fix the errors above before committing."
  echo ""
  echo "Tips:"
  echo "  - Run 'npm run type-check' to see all errors"
  echo "  - Run 'npm run type-check:watch' for continuous checking"
  echo "  - Check TYPESCRIPT_GUIDELINES.md for common fixes"
  exit 1
fi

echo "‚úÖ TypeScript type check passed!"
